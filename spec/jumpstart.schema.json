{
  "$id": "http://rodent.zone/jumpstart/schemas/jumpstart.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "jumpstart": {
      "type": "object",
      "properties": {
        "extends": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "steps": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "copy": {
                    "type": "object",
                    "properties": {
                      "from": {
                        "type": "string"
                      },
                      "to": {
                        "type": "string"
                      }
                    },
                    "required": ["from"],
                    "additionalProperties": false
                  }
                },
                "required": ["copy"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "run": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": ["run"],
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "required": ["steps"],
      "additionalProperties": false
    }
  },
  "required": ["jumpstart"],
  "additionalProperties": false
}
